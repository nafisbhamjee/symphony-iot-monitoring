{
    "id": null,
    "title": "IoT Simulator + Analysis Engine Dashboard",
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "type": "timeseries",
        "title": "IoT Device Temperature (Â°C)",
        "id": 1,
        "datasource": {
          "type": "prometheus",
          "uid": "PROM"
        },
        "targets": [
          {
            "expr": "iot_temperature_celsius",
            "legendFormat": "{{instance}}",
            "interval": ""
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "celsius"
          },
          "overrides": []
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
  
      {
        "type": "timeseries",
        "title": "IoT Device Humidity (%)",
        "id": 2,
        "datasource": {
          "type": "prometheus",
          "uid": "PROM"
        },
        "targets": [
          {
            "expr": "iot_humidity_percent",
            "legendFormat": "{{instance}}",
            "interval": ""
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          },
          "overrides": []
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
  
      {
        "type": "timeseries",
        "title": "IoT Device Battery Level (%)",
        "id": 3,
        "datasource": {
          "type": "prometheus",
          "uid": "PROM"
        },
        "targets": [
          {
            "expr": "iot_battery_percent",
            "legendFormat": "{{instance}}",
            "interval": ""
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          },
          "overrides": []
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
  
      {
        "type": "timeseries",
        "title": "Predicted Temperature (Analysis Engine)",
        "id": 4,
        "datasource": {
          "type": "prometheus",
          "uid": "PROM"
        },
        "targets": [
          {
            "expr": "predicted_temperature_celsius",
            "legendFormat": "Prediction",
            "interval": ""
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "color": {
              "mode": "palette-classic"
            }
          },
          "overrides": []
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
      },
  
      {
        "type": "stat",
        "title": "Latest Predicted Temperature",
        "id": 5,
        "datasource": {
          "type": "prometheus",
          "uid": "PROM"
        },
        "targets": [
          {
            "expr": "predicted_temperature_celsius",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 35, "color": "yellow" },
                { "value": 45, "color": "red" }
              ]
            }
          },
          "overrides": []
        },
        "gridPos": { "h": 6, "w": 6, "x": 0, "y": 16 }
      }
    ]
  }
  